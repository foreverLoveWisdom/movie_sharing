%div.d-flex.align-items-center.justify-content-center.h-100
  %div.col-sm-12.col-md-8.col-lg-6
    %h2 Log in
    = form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: "needs-validation", novalidate: true }) do |f|
      .mb-3
        = f.label :username, class: "form-label"
        = f.text_field :username, autofocus: true, autocomplete: "username", class: "form-control", required: true
        %div{ class: "invalid-feedback" }
          Please enter a valid username.
      .mb-3
        = f.label :password, class: "form-label"
        = f.password_field :password, autocomplete: "current-password", class: "form-control", required: true
        %div{ class: "invalid-feedback" }
          Please enter your password.
      - if devise_mapping.rememberable?
        .mb-3
          = f.check_box :remember_me, class: "form-check-input"
          = f.label :remember_me, class: "form-check-label"
      .mb-3
        = f.submit "Log in", class: "btn btn-primary"
    = render "devise/shared/links"
